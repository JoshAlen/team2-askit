<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>

      <%= form_with(model: contact, local: true) do |form| %>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Name</label>
             <%= form.text_field :name, id: :contact_name, class: 'form-control', placeholder: 'Name' %>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Email Address</label>
            <%= form.email_field :email, id: :contact_email, class: 'form-control', placeholder: 'Email Address' %>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Phone Number</label>
            <%= form.telephone_field :phone, id: :contact_phone, class: 'form-control', placeholder: 'Phone Number' %>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Message</label>
            <%= form.text_area :message, id: :contact_message, class: 'form-control', placeholder: 'Message', rows: 5 %>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="form-group">
          <%= form.submit 'Send', class: 'btn btn-primary', id: 'sendMessageButton' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

